<section class="image-banner-{{ section.id }} position-relative text-white d-flex align-items-center justify-content-center">
  {% if section.settings.image %}
    <img
      src="{{ section.settings.image | image_url: width: 2000 }}"
      alt="{{ section.settings.heading | escape }}"
      class="img-fluid w-100 h-100 position-absolute top-0 start-0 object-fit-cover"
      loading="lazy"
      width="auto"
      height="auto">
  {% endif %}

  <div class="position-relative text-center px-3" style="
    background-color: {{ section.settings.text_bg_color }};
    padding: 1.5rem;
    border-radius: 8px;
  ">
    {% if section.settings.heading != blank %}
      <h1 class="display-5 fw-bold" style="color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.text != blank %}
      <p class="lead" style="color: {{ section.settings.text_color }};">
        {{ section.settings.text }}
      </p>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="btn btn-lg mt-3"
        style="
        color: {{ section.settings.button_text_color }};
        background-color: {{ section.settings.button_bg_color }};
        border-color: {{ section.settings.button_bg_color }};
      ">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>

</section>

<style>
  .image-banner-{{ section.id }} {
    min-height: 60vh;
  }

  .image-banner-{{ section.id }}
  img {
    object-fit: cover;
    z-index: 0;
  }
</style>

{% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Banner image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "A quality product of the top brand around the world"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Description color",
        "default": "#f1f1f1"
      }, {
        "type": "color",
        "id": "text_bg_color",
        "label": "Text background color",
        "default": "rgba(0,0,0,0.4)"
      }, {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button background color",
        "default": "#0d6efd"
      }, {
        "type": "textarea",
        "id": "text",
        "label": "Description",
        "default": "This is a simple image banner section."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ]
  }
{% endschema %}