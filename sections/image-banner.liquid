<section class="image-banner-{{ section.id }} position-relative text-white d-flex align-items-center justify-content-center">
  {% if section.settings.image %}
    <img
      src="{{ section.settings.image | image_url: width: 2000 }}"
      alt="{{ section.settings.heading | escape }}"
      width="auto"
      height="auto">
  {% else %}
    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder_svg' }}
  {% endif %}
  <div class="container">
    <div class="banner-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>
        {{ section.settings.sub-heading }}
      </p>
      <div class="banner-CTA">
        <div class="cta-action">
          <a href="{{ section.settings.url_1 }}" class="btn btn-primary">
            {{ section.settings.label_1 }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Banner content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "Our Best Collection"
      },
      {
        "type": "richtext",
        "id": "sub-heading",
        "label": "Sub Heading"
      }, {
        "type": "text",
        "id": "label_1",
        "label": "Button Label",
        "default": "Buy Now"
      }, {
        "type": "url",
        "id": "url_1",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}